
## Variable that says profile's been extended
BASH_PROFILE_IS_EXTENDED=true

## Term setups
SESSION_TYPE="$TERM";
case $(ps -o comm= -p $PPID) in
    sshd|*/sshd) SESSION_TYPE="ssh";;
esac
if [ $SESSION_TYPE == "term" ]; then            
        setterm -blank 0
fi

## Cow says fortune
if [ -x "$(command -v fortune)" ]; then
	
	HASLOLCAT=false;
	if [ -x "$(command -v lolcat)" ]; then
		HASLOLCAT=true;
	fi
	
	if [ -x "$(command -v fortune)" ]; then
		if [ $HASLOLCAT ]; then
			fortune	| cowsay -f moofasa | lolcat
		else
			fortune	| cowsay -f moofasa
		fi
	else
		if [ $HASLOLCAT ]; then
			fortune
		else
			fortune | lolcat
		fi
	fi
fi
