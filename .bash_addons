###
# Add local bin to path
###
if [ -d ~/bin ]; then
	export PATH="$PATH:~/bin"
fi

###
# Display to xorg, xwing, ming
###
export DISPLAY=:0

###
# Create or attach to tmux
###
tmux has-session -t "primary" 2>/dev/null
if [ "$?" -eq 1 ]; then
    tmux new -s primary
else
    ###
	# Cow says fortune
	###
	if [[ -x $(command -v fortune) && $(command -v cowsay) && $(command -v lolcat) ]]; then
		fortune	| cowsay -f moofasa | lolcat
	fi

fi
